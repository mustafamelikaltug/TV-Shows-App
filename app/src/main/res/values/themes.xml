<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TVShowsApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:fontFamily">@font/aller_display</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="ThemeOverlay.SearchView" parent="">
        <item name="android:editTextColor">@color/colorTextIcons</item>
        <item name="android:textColorHint">@color/colorTextSecondary</item>
        <item name="colorControlNormal">@color/colorTextIcons</item>
        <item name="colorControlActivated">@color/colorTextIcons</item>
        <item name="android:fontFamily">@font/aller_rg</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>


</resources>